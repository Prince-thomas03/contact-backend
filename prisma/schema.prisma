generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  firstName String
  lastName  String
  mobileNo  String    @unique
  email     String
  password  String
  address  Address[] // <-- ðŸ‘ˆ This tells Prisma: "User has many contacts"
}

model Address {
  id        String   @id @default(uuid())
  firstName String
  lastName  String
  mobileNo  String   @unique
  email     String
  createdAt DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}
